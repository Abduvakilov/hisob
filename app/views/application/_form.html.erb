<%= simple_form_for controller.object do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <% controller.model.shown_fields.each do |field| %>
    <% if controller.model.belongs.include?(field) %>
      <%= f.association field %>
    <% else %>
      <%= f.input field %>
    <% end %>
  <% end %>

  <%= render 'form_buttons', f: f %>
  
<% end %>
