<%= simple_form_for controller.object, url: controller.path(controller.object) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <% model = controller.model
  model.form_fields.each_with_index do |field, i| %>
    <% if model.belongs.include?(field) %>
      <%= f.association field %>
    <% else %>
      <%= f.input field, ({as: 'datepicker'} if model.type_for_attribute(field).type == :date ) || {} %>
    <% end %>
  <% end %>

  <%= render 'common/form_buttons', f: f %>
  
<% end %>
