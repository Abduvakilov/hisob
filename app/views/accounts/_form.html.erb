<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :company %>
    <%= f.association :currency %>
    <%= f.input :is_bank_account %>
    <%= f.input :bank_account_number %>
  </div>

  <div class="d-sm-flex">
    <%= link_to "Ortga", accounts_path, class: "d-none d-sm-flex mr-sm-auto btn btn-outline-secondary" %>
    <%= f.button :submit, class: "btn-primary mx-1" %>
    <% if local_assigns[:create_and_new] %>
      <%= f.button :submit, create_and_new, name: :create_and_new, class: "btn-outline-info"  %>
    <% end %>
    <% if local_assigns[:show] %>
      <% link_to "Koâ€˜rsat", @account %>
    <% end %>
  </div>

<% end %>
