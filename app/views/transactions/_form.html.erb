  </div>

  <%= f.association :account, as: :account, selected: 1 %> <!-- TODO: Selected should be user default-->

  <div class="form-row">
    <%= f.association :counter_party %>
    <%= f.input :amount, as: :currency %>
  </div>
  <div class="form-row">
    <%= f.input :coefficient, placeholder: "%" %>
  </div>  <div class="form-row">
