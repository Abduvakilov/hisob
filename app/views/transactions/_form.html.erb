<%= simple_form_for @transaction,  wrapper: :custom_multi_select do |f| %>
  
  <%= f.error_notification %>

  <div class="form-row">
  	<%= f.input :date %>
  </div>
  <div class="form-row">
	  <%= f.association :account %>
	  <%= f.association :counter_party %>
  </div>
  <div class="form-row">
		<%= f.input :amount %>
  </div>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>

<%= semantic_form_for @transaction do |f| %>
	<div class="row">
		<%= f.input :account, prompt: :Tanlang, 
			wrapper_html: {class: "col-md-6 mb-3"}, input_html: {class: "form-control"} %>
		<%= f.input :counter_party, prompt: :Tanlang,
 			wrapper_html: {class: "col-md-6 mb-3"}, input_html: {class: "form-control"} %>
	</div>
	<%= f.action :submit, button_html: {class: "btn btn-primary"} %>
	
<% end %>