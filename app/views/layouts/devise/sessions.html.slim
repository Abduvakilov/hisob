doctype html
html
  head
    title Login
    meta[name="viewport" content="width=device-width, initial-scale=1"]
    css:
      html, body {
        position: relative;
        height: 100%;
      }
      *, ::after, ::before {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans","Liberation Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        text-align: left;
        background-color: #fff;
      }
      .center {
        position: absolute;
        top: 15%; left: 50%;
        transform: translateX(-50%);
        width: 300px;
      }

    link href=asset_path("login", type: :stylesheet, skip_pipeline: true) rel="stylesheet"
  body
    .center.card: .card-body
      - flash.each do |_, value|
        div role='alert'
          = value
      = yield
